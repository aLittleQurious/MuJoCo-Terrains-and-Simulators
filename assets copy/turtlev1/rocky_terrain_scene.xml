<mujoco model="rocky_terrain_scene">
    <compiler angle="radian" inertiafromgeom="true"/>
    <option timestep="0.002" gravity="0 0 -9.81"/>

    <!-- Assets: Define the height field -->
    <asset>
        <hfield name="rocky_terrain" size="10 10 2 0.1" file="rocky_terrain.png"/>
    </asset>

    <!-- World -->
    <worldbody>
        <!-- Ground Plane -->
        <geom name="ground_plane" type="plane" size="50 50 0.1" rgba="0.3 0.3 0.3 1"/>

        <!-- Rocky Terrain -->
        <geom name="rocky" type="hfield" hfield="rocky_terrain" pos="0 0 0" rgba="0.4 0.25 0.15 1"/>
    </worldbody>
</mujoco>
